@model ManagerViewModel
@{
    ViewData["Title"] = "Manage Destinations, Accommodations, and Activities";
}

<h2>@ViewData["Title"]</h2>

@if (TempData["Message"] != null)
{
    <div class="alert alert-success mt-3" role="alert">
        @TempData["Message"]
    </div>
}

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger mt-3" role="alert">
        @TempData["Error"]
    </div>
}

<div class="row">
    <div class="col-md-4">
        <h3>Destinations</h3>
        <form asp-action="AddDestination" method="post">
            <div class="form-group">
                <label asp-for="NewDestination"></label>
                <input asp-for="NewDestination" class="form-control" />
                <span asp-validation-for="NewDestination" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-primary">Add Destination</button>
        </form>
        <ul class="list-group mt-3">
            @foreach (var destination in Model.Destinations)
            {
                <li class="list-group-item d-flex justify-content-between align-items-center">
                    @destination.Name
                    <form asp-action="DeleteDestination" asp-route-id="@destination.Id" method="post"
                          onsubmit="return confirm('Are you sure you want to delete this destination?');">
                        <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                    </form>
                </li>
            }
        </ul>
    </div>

    <div class="col-md-4">
        <h3>Accommodations</h3>
        <form asp-action="AddAccommodation" method="post">
            <div class="form-group">
                <label asp-for="NewAccommodation"></label>
                <input asp-for="NewAccommodation" class="form-control" />
                <span asp-validation-for="NewAccommodation" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NewAccommodationPhone"></label>
                <input asp-for="NewAccommodationPhone" class="form-control" />
                <span asp-validation-for="NewAccommodationPhone" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NewAccommodationEmail"></label>
                <input asp-for="NewAccommodationEmail" class="form-control" />
                <span asp-validation-for="NewAccommodationEmail" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-primary">Add Accommodation</button>
        </form>
        <ul class="list-group mt-3">
            @foreach (var accommodation in Model.Accommodations)
            {
                <li class="list-group-item d-flex justify-content-between align-items-center">
                    @accommodation.Name
                    <form asp-action="DeleteAccommodation" asp-route-id="@accommodation.Id" method="post"
                          onsubmit="return confirm('Are you sure you want to delete this accommodation?');">
                        <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                    </form>
                </li>
            }
        </ul>
    </div>

    <div class="col-md-4">
        <h3>Activities</h3>
        <form asp-action="AddActivity" method="post">
            <div class="form-group">
                <label asp-for="NewActivity"></label>
                <input asp-for="NewActivity" class="form-control" />
                <span asp-validation-for="NewActivity" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-primary">Add Activity</button>
        </form>
        <ul class="list-group mt-3">
            @foreach (var activity in Model.Activities)
            {
                <li class="list-group-item d-flex justify-content-between align-items-center">
                    @activity.Name
                    <form asp-action="DeleteActivity" asp-route-id="@activity.Id" method="post"
                          onsubmit="return confirm('Are you sure you want to delete this activity?');">
                        <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                    </form>
                </li>
            }
        </ul>
    </div>
</div>

<div class="mt-3">
    <a asp-action="Index" class="btn btn-secondary">Back to Trip List</a>
</div>