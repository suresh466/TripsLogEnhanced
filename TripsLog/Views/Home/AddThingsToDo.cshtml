@* the model used *@
@model ThingsToDoViewModel

@{
    ViewData["Title"] = "Add Things To Do";
}
@* form for adding things to do *@
<form asp-action="AddThingsToDo" method="post">
    <div class="form-group">
        <label asp-for="ThingToDo1"></label>
        <input asp-for="ThingToDo1" class="form-control" />
        <span asp-validation-for="ThingToDo1" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="ThingToDo2"></label>
        <input asp-for="ThingToDo2" class="form-control" />
        <span asp-validation-for="ThingToDo2" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="ThingToDo3"></label>
        <input asp-for="ThingToDo3" class="form-control" />
        <span asp-validation-for="ThingToDo3" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Save</button>
    <a asp-action="Cancel" class="btn btn-secondary">Cancel</a>
</form>
